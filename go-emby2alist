version: '3.1'
services:
  go-emby2alist:
    environment:
      - TZ=Asia/Shanghai
      - GIN_MODE=release
    container_name: go-emby2alist
    volumes:
      - /root/go-emby2alist/config.yml:/app/config.yml
      - /root/go-emby2alist/ssl:/app/ssl
    ports:
      - ${httpport}:8095 # http
      - ${httpsport}:8094 # https
    networks:
      - net-bridge
    restart: unless-stopped
networks:
  net-bridge:
    external: true
